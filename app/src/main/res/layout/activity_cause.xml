<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CauseActivity"
    android:background="#fcfcfc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/cause"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/causen1"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">


            <ImageView
                android:id="@+id/imageView_userIcon2"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="#1E88E5"
                android:padding="8dp"
                android:src="@drawable/img_user"
                android:tint="@color/white" />


            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/imageView_userIcon2"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userIcon2"
                android:background="@color/editTextBG"
                android:hint="@string/dname"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/imageView_userIcon3"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="#1E88E5"
                android:padding="8dp"
                android:src="@drawable/ic_call_black_24dp"
                android:tint="@color/white" />



            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userIcon3"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userIcon3"
                android:background="@color/editTextBG"
                android:hint="@string/dnumber"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:ems="10"
                android:inputType="phone"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/imageView_userIcon4"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="#1E88E5"
                android:padding="8dp"
                android:src="@drawable/ic_add_circle_black_24dp"
                android:tint="@color/white" />


            <EditText
                android:id="@+id/editTextQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userIcon4"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userIcon4"
                android:background="@color/editTextBG"
                android:hint="Cause"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:inputType="text"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relativeLayout3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/imageView_userIcon5"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="#1E88E5"
                android:padding="8dp"
                android:src="@drawable/ic_map_black_24dp"
                android:tint="@color/white" />



            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userIcon5"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userIcon5"
                android:background="@color/editTextBG"
                android:hint="@string/daddress"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relativeLayout4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">


            <ImageView
                android:id="@+id/imageView_userIcon6"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="#1E88E5"
                android:padding="8dp"
                android:src="@drawable/ic_shopping_cart_black_24dp"
                android:tint="@color/white" />




            <EditText
                android:id="@+id/spinnerGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userIcon6"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userIcon6"
                android:background="@color/editTextBG"
                android:hint="@string/causen2"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/relativeLayout5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">


            <Button
                android:id="@+id/buttonAddArtist"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#1E88E5"
                android:fontFamily="sans-serif-medium"
                android:text="@string/dbutton"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/Cause_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="#1E88E5"
                android:layout_below="@id/buttonAddArtist"
                android:fontFamily="sans-serif-medium"
                android:text="@string/causen3"
                android:textColor="@color/white" />

        </RelativeLayout>



    </RelativeLayout>



</LinearLayout>